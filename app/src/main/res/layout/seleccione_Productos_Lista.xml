<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0ECF8">

    <!-- Toolbar que va a reemplazar al actionbar -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarSelectProd"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="@dimen/toolbarElevation"/>

    <!-- RecyclerView que tiene los datos -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSeleccionProductosListado"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:id="@+id/btnAgregarCarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnAgregarCarrito"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorBlank"
        android:layout_gravity="bottom"
        android:textStyle="bold"
        android:layout_margin="2dp"/>
</LinearLayout>