<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.cibertec.finalproject">

    <uses-feature android:glEsVersion="0x00020000"
        android:required="true" />

    <meta-data android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/splash_image"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"></activity>

        <activity android:name=".cliente.ClientesListaActivity"></activity>
        <activity android:name=".cliente.ClientesNuevoActivity"></activity>
        <activity android:name=".cliente.ClientesDetalleActivity"></activity>
        <activity android:name=".cliente.ClientesMapActivity"></activity>

        <activity android:name=".producto.ProductosListaActivity"></activity>
        <activity android:name=".producto.ProductosNuevoActivity"></activity>

        <activity android:name=".pedido.PedidosListaActivity"></activity>
        <activity android:name=".pedido.NuevoPedidoActivity"></activity>
        <activity android:name=".pedido.SeleccioneProductoActivity"></activity>
        <activity android:name=".pedido.DetallePedidoActivity"></activity>

        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key"></meta-data>

    </application>

</manifest>